{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path((?!api/).*)",
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": "(?i)(facebookexternalhit|whatsapp|twitterbot|slackbot|linkedinbot|discordbot|telegrambot|pinterest|redditbot).*"
        }
      ],
      "destination": "/api/preview?path=:path"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}